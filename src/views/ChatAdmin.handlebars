<form id="chat-form" class="chat" method="POST" action="/">
        <h1>CHAT</h1>
        <h2 id="user-email" style="display: none;">{{user.email}}</h2>
        <h2 id="user-name" style="display: none;">{{user.name}}</h2>
        <h2 id="user-age" style="display: none;">{{user.age}}</h2>
        <h2 id="user-avatar" style="display: none;">{{user.avatar}}</h2>
        <input id="alias" name="alias" class="border rounded shadow mb-5 bg-body border-secondary" type="text" placeholder="Alias" required>
        <input id="info" name="text" class="border rounded shadow mb-5 bg-body border-secondary" placeholder="Mensaje" required>
        <button class="btn btn-secondary btn-lg" type="submit" value="send" id="send-message">enviar</button>
        <div>
            <p id="log"></p>
        </div>
</form>

<script src="/socket.io/socket.io.js"></script>
