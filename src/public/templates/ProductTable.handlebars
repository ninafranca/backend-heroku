<h1 id="title-productos" style="font-size: 170%; padding-top: 5%">Productos</h1>
<div class="div-products">
    <div class="div-div-products">
        {{#if products}}
        {{#each products}}
            <div class="products-title card shadow p-3 mb-5 bg-body rounded">
                <h2 class="products-title-title">Nombre: {{this.title}}</h2>
                <h2 class="products-title-brand">Marca: {{this.brand}}</h2>
                <h2 class="products-title-description">Descripción: {{this.description}}</h2>
                <h2 class="products-title-description">Código: {{this.code}}</h2>
                <h2 class="products-title-description">Género: {{this.gender}}</h2>
                <h2 class="products-title-price">Precio: ${{this.price}}</h2>
                <h2 class="products-title-price">Stock: {{this.stock}}</h2>
                <img src="{{this.thumbnail}}" alt="Product image" style="width: 10vw">
            </div>
        {{/each}}
        {{else}}
            <h2>No hay productos</h2>
        {{/if}}
    </div>
</div>